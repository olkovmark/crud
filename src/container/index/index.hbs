{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<div class='main'>

  <section>
    <div class='form'>
      <h1 class='form__title'>Create user</h1>
      <form method='POST' action='/user-create'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='email' class='form__label'>
              Email address
            </label>
            <input
              t
              ype='email'
              name='email'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='login' class='form__label'>
              login
            </label>
            <input
              type='login'
              name='login'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='password' class='form__label'>
              password
            </label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>
          <button class='form__button'>Create</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Users list</h1>
      <div class='user-list'>
        {{#with data.users}}
          {{#if isEmpty}}
            <mark>
              Users list is Empty
            </mark>
          {{else}}
            <ul>
              {{#each list}}

                <li>{{email}}
                  |
                  {{login}}
                  |
                  {{id}}
                  <a
                    href='/user-delete?id={{id}}'
                  >delete</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Update email</h1>
      <form method='POST' action='/update-email'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='id' class='form__label'>
              ID
            </label>
            <input
              type='id'
              name='id'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='email' class='form__label'>
              New email
            </label>
            <input
              t
              ype='email'
              name='email'
              class='form__input'
            />
          </div>

          <div class='form__field'>
            <label for='password' class='form__label'>
              password
            </label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>
          <button class='form__button'>Update</button>
        </div>
      </form>
    </div>
  </section>
</div>